<div class="form-control container">
  <%= form_with model: post, url: path do |f| %>

    <div class="field my-3" >
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control' %>
    </div>

    <div class="field  my-3">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="field my-3">
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>


    <div class="my-3">
      <label for="tag">Tag it as</label>
      <p class="small">Who will be seeing this Post</p>
      <h6>
        <% Post.tags.keys.each do |tag| %>
          <%= f.radio_button :tag, tag %>
          <%= f.label tag.to_sym %>
        <% end %></h6>
    </div>

    <div class="d-flex">
      <%= f.submit "Submit", class: "btn btn-outline-primary mx-5" %>
      <%= link_to "Back", :back, class: "btn btn-outline-danger" %>
    </div>
    <% end %>
</div>